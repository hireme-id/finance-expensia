<div class="modal fade" id="recruiterForm">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="title-modal"></h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mb-2" id="dvModalRecruiter">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label">Kode Rekruter</label>
                            <div class="col-md-9">
                                <input type="text" id="txtRecruiterCode" class="form-control" bind-name="recruiterCode" name="recruiterCode">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label">Rekruter</label>
                            <div class="col-md-9">
                                <select type="text" id="ddlUserId" class="select2 form-control" bind-name="userId" name="userId" bind-trigger="change"></select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group justify-content-between" style="margin-bottom: 0px !important">
                    <button type="button" class="btn btn-primary float-right ml-2" id="btnSubmit">Submit</button>
                    <button type="submit" class="btn btn-default close-button float-right" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>