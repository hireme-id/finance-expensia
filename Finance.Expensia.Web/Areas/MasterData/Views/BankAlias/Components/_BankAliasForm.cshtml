<div class="modal fade" id="bankAliasForm">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="title-modal"></h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mb-2" id="dvModalBankAlias">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label">Company</label>
                            <div class="col-md-9">
                                <select type="text" id="ddlCompany" class="select2 form-control" bind-name="companyId" name="companyId" bind-trigger="change"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label">Alias Name <span class="text-danger">*</span></label>
                            <div class="col-md-9">
                                <input type="text" id="txtAliasName" class="form-control" bind-name="aliasName" name="aliasName">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label">Description</label>
                            <div class="col-md-9">
                                <textarea rows="3" id="txtDescription" class="form-control" bind-name="description" name="description" style="resize:none"></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label">Bank Name <span class="text-danger">*</span></label>
                            <div class="col-md-9">
                                <input type="text" id="txtBankName" class="form-control" bind-name="bankName" name="bankName">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label">Bank Address</label>
                            <div class="col-md-9">
                                <input type="text" id="txtBankAddress" class="form-control" bind-name="address" name="address">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label">Account No <span class="text-danger">*</span></label>
                            <div class="col-md-9">
                                <input type="text" id="txtAccountNo" class="form-control" bind-name="accountNo" name="accountNo">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label">Account Name <span class="text-danger">*</span></label>
                            <div class="col-md-9">
                                <input type="text" id="txtAccountName" class="form-control" bind-name="accountName" name="accountName">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group justify-content-between" style="margin-bottom: 0px !important">
                    <button type="button" class="btn btn-primary float-right ml-2" id="btnSubmit">Submit</button>
                    <button type="submit" class="btn btn-default close-button float-right" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>