<div class="modal fade" id="costCenterForm">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="title-modal"></h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mb-2" id="dvModalCostCenter">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label">Company</label>
                            <div class="col-md-9">
                                <select type="text" id="ddlCompany" class="select2 form-control" bind-name="companyId" name="companyId" bind-trigger="change"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label">Customer Code</label>
                            <div class="col-md-9">
                                <input type="text" id="costCenterCode" class="form-control" bind-name="costCenterCode" name="costCenterCode">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label">Customer Name</label>
                            <div class="col-md-9">
                                <input type="text" id="costCenterName" class="form-control" bind-name="costCenterName" name="costCenterName">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group justify-content-between" style="margin-bottom: 0px !important">
                    <button type="button" class="btn btn-primary float-right ml-2" id="btnSubmit">Submit</button>
                    <button type="submit" class="btn btn-default close-button float-right" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>