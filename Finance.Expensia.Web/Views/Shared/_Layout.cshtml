@{
    var loginPage = Url.Action("Index", "Login", new { area = "Account" } );
    var homePage = Url.Action("Index", "OutgoingPayment", new { area = "Core" });
    var mailbox = Url.Action("Index", "Mailbox", new { area = "Core" });
    var masterPartner = Url.Action("Index", "Partner", new { area = "MasterData" });
    var masterBankAlias = Url.Action("Index", "BankAlias", new { area = "MasterData" });

    var refreshTokenUrl = Url.Action("RefreshToken", "Login");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Expensia</title>
    <partial name="_Styles" />
</head>
<body class="hold-transition sidebar-mini sidebar-collapse">
    <div id="loader-wrapper">
        <div id="loader"></div>
        <div class="loader-section"></div>
    </div>
    <!-- Site wrapper -->
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-light-primary elevation-4">
            <!-- Brand Logo -->
            <a href="@homePage" class="brand-link">
                <img src="~/images/expensia-logo.png" alt="Logo" class="brand-image img-circle elevation-3" style="opacity: .8" />
                <span class="brand-text font-weight-light">Expensia</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img id="photoUser" referrerpolicy="no-referrer" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info justify-content-between align-items-center w-100" style="display:flex!important">
                        <a id="displayName" href="#" class="d-block"></a>
