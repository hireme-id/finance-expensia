@using Finance.Expensia.Shared.Constants;
@{
    var loginPage = Url.Action("Index", "Login", new { area = "Account" } );
    var homePage = Url.Action("Index", "OutgoingPayment", new { area = "Core" });
    var mailbox = Url.Action("Index", "Mailbox", new { area = "Core" });
    var masterPartner = Url.Action("Index", "Partner", new { area = "MasterData" });
    var masterBankAlias = Url.Action("Index", "BankAlias", new { area = "MasterData" });

    var refreshTokenUrl = Url.Action("RefreshToken", "Login");
    var myPermissionUrl = Url.Action("GetMyPermission", "Login");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Expensia</title>
    <partial name="_Styles" />
</head>
<body class="hold-transition sidebar-mini sidebar-collapse">
    <div id="loader-wrapper">
        <div id="loader"></div>
        <div class="loader-section"></div>
    </div>
    <!-- Site wrapper -->
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-light-primary elevation-4">
            <!-- Brand Logo -->
            <a href="@homePage" class="brand-link">
                <img src="~/images/expensia-logo.png" alt="Logo" class="brand-image img-circle elevation-3" style="opacity: .8" />
                <span class="brand-text font-weight-light">Expensia</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img id="photoUser" referrerpolicy="no-referrer" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info justify-content-between align-items-center w-100" style="display:flex!important">
                        <a id="displayName" href="#" class="d-block"></a>
                        <a href="#" class="d-block" onclick="Logout()">
                            <i class="fas fa-sign-out-alt"></i>
                        </a>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="true">
                        <li id="menuMaster" class="nav-item" style="display:none">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-database"></i>
                                <p>
                                    Master Data
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview pl-2">
                                <li id="menuPartner" class="nav-item" style="display:none">
                                    <a href="@masterPartner" class="nav-link">
                                        <i class="far fa-handshake nav-icon"></i>
                                        <p>Partner</p>
                                    </a>
                                </li>
                                <li id="menuBankAlias" class="nav-item" style="display:none">
                                    <a href="@masterBankAlias" class="nav-link">
                                        <i class="fas fa-piggy-bank nav-icon"></i>
                                        <p>Bank Alias</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li id="menuOutgoingPayment" class="nav-item" style="display:none">
                            <a href="@homePage" class="nav-link">
                                <i class="nav-icon fas fa-edit"></i>
                                <p>
                                    Outgoing Payment
                                </p>
                            </a>
                        </li>
                        <li id="menuInbox" class="nav-item" style="display:none">
                            <a href="@mailbox" class="nav-link">
                                <i class="nav-icon far fa-envelope"></i>
                                <p>
                                    Mailbox
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class=" col-sm-6 d-inline-flex">
                            @if (ViewData["isSecondPage"] != null)
                            {
                                <a href="javascript:history.back()" class="btn btn-primary mr-2 title-back"><i class="right fas fa-angle-left"></i></a>
                            }
                            <h1>@ViewData["Subtitle"]</h1>
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    @RenderBody()
                                </div>
                                <!-- /.card-body -->
                            </div>
                            <!-- /.card -->
                        </div>
                    </div>
                </div>
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <b>Version</b> 1.0.0
            </div>
            <strong>Copyright &copy; 2024 <a href="@homePage">Expensia</a>.</strong> All rights reserved.
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->
    
    <partial name="_Scripts" />
    @await RenderSectionAsync("Scripts", required: false)

    <script type="text/javascript">
        if (IsTokenNotExist()) {
            RedirectToLogin();
        }

        const expiredAt = new Date(localStorage.getItem("expiredAt"));
        const sessionExpiredAt = new Date(localStorage.getItem("sessionExpiredAt"));

        if (new Date() >= sessionExpiredAt) {
            RedirectToLogin();
        }

        let dt = new Date((new Date()).getTime() + 10 * 60000);
        if (dt >= expiredAt) {
            $.ajax({
                "url": "@refreshTokenUrl",
                "method": "POST",
                "timeout": 0,
                "headers": {
                    "Authorization": "Bearer " + localStorage.getItem("refreshToken"),
                    "Content-Type": "application/json"
                },
            })
                .done(function (response) {
                    if (response.succeeded) {
                        localStorage.setItem("accessToken", response.obj.accessToken);
                        localStorage.setItem("expiredAt", response.obj.expiredAt);
                        localStorage.setItem("refreshToken", response.obj.refreshToken);
                        localStorage.setItem("sessionExpiredAt", response.obj.sessionExpiredAt);

                        window.location.reload();
                    }
                    else {
                        RedirectToLogin();
                    }
                });
        }

		$.ajax({
			"url": "@myPermissionUrl",
			"method": "POST",
			"timeout": 0,
			"headers": {
				"Authorization": "Bearer " + localStorage.getItem("accessToken"),
				"Content-Type": "application/json"
			},
		})
			.done(function (response) {
				if (response.succeeded) {
					if (response.obj.permissions.includes("@PermissionConstants.MasterData.Partner.PartnerUpsert")) {
						$('#menuMaster').show();
						$('#menuPartner').show();
					}

					if (response.obj.permissions.includes("@PermissionConstants.MasterData.BankAlias.BankAliasUpsert")) {
						$('#menuMaster').show();
						$('#menuBankAlias').show();
					}

					if (response.obj.permissions.includes("@PermissionConstants.OutgoingPayment.OutgoingPaymentViewMyDocument")
						|| response.obj.permissions.includes("@PermissionConstants.OutgoingPayment.OutgoingPaymentView")) {
						$('#menuOutgoingPayment').show();
					}

					if (response.obj.permissions.includes("@PermissionConstants.ApprovalInbox.ApprovalInboxView")) {
						$('#menuInbox').show();
					}
				}
			})
			.fail(function (xhr, status, error) {
				alert("Anda tidak diizinkan untuk mengakses halaman ini. Hubungi administrator anda!");
				RedirectToLogin();
			});
    </script>
</body>
</html>
